<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <form class="product-form"
                    action="<% if (editing==="true") { %>/admin/edit-product<% } else { %>/admin/add-product<% } %>"
                    method="POST">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title"
                            value="<% if (editing==="true") { %><%- prod.title %><% } %>">
                    </div>
                    <div class="form-control">
                        <label for="imageUrl">Image URL</label>
                        <input type="text" name="imageUrl" id="imageUrl"
                            value="<% if (editing==="true") { %><%- prod.imageURL %><% } %>">
                    </div>
                    <div class="form-control">
                        <label for="price">Price</label>
                        <input type="number" name="price" id="price" step="0.01"
                            value="<% if (editing==="true") { %><%- prod.price %><% } %>">
                    </div>
                    <div class="form-control">
                        <label for="description">Description</label>
                        <textarea name="description" id="description"
                            rows="5"><% if (editing==="true") { %><%- prod.description %><% } %></textarea>
                    </div>

                    <% if (editing ==="true") { %>
                     <input type="hidden" name="id" value="<%= prod.id %>">
                    <% } %>
                    <button class="btn" type="submit">
                        <% if (editing==="true") { %>
                            Update Product
                            <% } else { %>
                                Add Product
                                <% } %>
                    </button>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>